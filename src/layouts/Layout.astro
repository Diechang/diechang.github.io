---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "石川県・金沢市を中心に活動するフロントエンドエンジニアのポートフォリオサイトです。",
} = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-5LFPNDDL");
    </script>
    <!-- End Google Tag Manager -->
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
  </head>
  <body
    class="bg-bg text-text-main font-sans antialiased selection:bg-primary selection:text-white transition-colors duration-300"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-5LFPNDDL"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    /* Light Theme (Warm) */
    --color-bg: 255 255 255; /* White */
    --color-surface: 248 250 252; /* Slate 50 */
    --color-text-main: 15 23 42; /* Slate 900 */
    --color-text-muted: 71 85 105; /* Slate 600 */
    --color-primary: 249 115 22; /* Orange 500 */
    --color-accent: 234 179 8; /* Yellow 500 */
  }

  .dark {
    /* Dark Theme (Cool) */
    --color-bg: 15 23 42; /* Slate 900 */
    --color-surface: 30 41 59; /* Slate 800 */
    --color-text-main: 248 250 252; /* Slate 50 */
    --color-text-muted: 203 213 225; /* Slate 300 */
    --color-primary: 99 102 241; /* Indigo 500 */
    --color-accent: 56 189 248; /* Sky 400 */
  }

  /* Webkitブラウザ用のカスタムスクロールバー */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: rgb(var(--color-bg));
  }
  ::-webkit-scrollbar-thumb {
    background: rgb(var(--color-surface));
    border-radius: 5px;
    border: 1px solid rgb(var(--color-bg));
  }
  ::-webkit-scrollbar-thumb:hover {
    background: rgb(var(--color-text-muted));
  }
</style>
